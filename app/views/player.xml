<Alloy>
	<Window id="player" class="container" title="">
		
		<ImageView  id="img_Logo" />		

		<ImageView onClick="onImg_homebtnClicked" id="img_Homebtn" />
		
		<ImageView onClick="onImg_profile" id="img_profile" />
		
		<Label id="waiting"></Label>		
		<View id="plyView"> 
			<Label id="groupTextLbl"></Label>
			<Label id="audioTextLbl"></Label>
			<Button id="btn_Playpausebtn" onClick="playtrack"/>
			<Button id="btn_Stopbtn" onClick="stopTrack"/>
			<View id="timeBar">
				<View id="timeProgress"/>
			</View> 
			<Label id="duration"></Label>
		</View>
		<Button onClick="onBtn_showquestionClicked" id="btn_Showquestion" />
		<Label id="pageNumber"></Label>

	</Window>
</Alloy>